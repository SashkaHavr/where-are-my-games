{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    // Transpiling with TypeScript:
    "module": "NodeNext",
    "outDir": "${configDir}/dist",

    // NOT needing js files (this tsconfig is for internal package)
    "emitDeclarationOnly": true,
    "noEmit": false,

    // Building for a library
    "declaration": true,

    // Library in a monorepo
    "declarationMap": true,
    "composite": true
  }
}
